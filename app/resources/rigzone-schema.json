{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "properties": {
    "@context": {
      "type": "string"
    },
    "@type": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "baseSalary": {
      "type": "string"
    },
    "salaryCurrency": {
      "type": "string"
    },
    "datePosted": {
      "type": "string",
      "format": "date"
    },
    "educationRequirements": {
      "type": "string"
    },
    "employmentType": {
      "type": "string"
    },
    "experienceRequirements": {
      "type": "string",
      "format": "integer"
    },
    "hiringOrganization": {
      "$ref": "#/definitions/HiringOrganization"
    },
    "industry": {
      "type": "string"
    },
    "jobLocation": {
      "$ref": "#/definitions/JobLocation"
    },
    "identifier": {
      "$ref": "#/definitions/Identifier"
    },
    "description": {
      "type": "string"
    },
    "skills": {
      "type": "string"
    },
    "validThrough": {
      "type": "string",
      "format": "date"
    },
    "image": {
      "type": "string"
    },
    "url": {
      "type": "string"
    }
  },
  "required": [
    "@context",
    "@type",
    "baseSalary",
    "datePosted",
    "description",
    "educationRequirements",
    "employmentType",
    "experienceRequirements",
    "hiringOrganization",
    "identifier",
    "image",
    "industry",
    "jobLocation",
    "salaryCurrency",
    "skills",
    "title",
    "url",
    "validThrough"
  ],
  "definitions": {
    "HiringOrganization": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "@type": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "@type",
        "name"
      ],
      "title": "HiringOrganization"
    },
    "Identifier": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "@type": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "value": {
          "type": "string",
          "format": "integer"
        }
      },
      "required": [
        "@type",
        "name",
        "value"
      ],
      "title": "Identifier"
    },
    "JobLocation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "@type": {
          "type": "string"
        },
        "address": {
          "$ref": "#/definitions/Address"
        }
      },
      "required": [
        "@type",
        "address"
      ],
      "title": "JobLocation"
    },
    "Address": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "@type": {
          "type": "string"
        },
        "addressLocality": {
          "type": "string"
        },
        "addressRegion": {
          "type": "string"
        },
        "postalCode": {
          "type": "string"
        },
        "addressCountry": {
          "type": "string"
        }
      },
      "required": [
        "@type",
        "addressCountry",
        "addressLocality",
        "addressRegion",
        "postalCode"
      ],
      "title": "Address"
    }
  }
}
